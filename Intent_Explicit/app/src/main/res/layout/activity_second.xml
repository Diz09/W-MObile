        android:textSize="20sp"
        android:layout_marginStart="12dp"
        android:textStyle="bold"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/textView3"
        android:text="@string/this_is_second_activity"
        android:textColor="@color/white"
